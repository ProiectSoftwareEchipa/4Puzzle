                <Rectangle x:ConnectionId='6' x:Name="Rectangle22" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="90" Stroke="Black" VerticalAlignment="Top" Width="90"                           Canvas.ZIndex="2" Canvas.Left="103" Canvas.Top="278" StrokeThickness="0"/>
                <Rectangle x:ConnectionId='7' x:Name="Rectangle23" Fill="#FFF4F4F5" Height="90" Stroke="Black" VerticalAlignment="Top" Width="90" HorizontalAlignment="Right"                           Canvas.ZIndex="2" Canvas.Left="207" Canvas.Top="278" StrokeThickness="0"/>
                <Rectangle x:ConnectionId='8' x:Name="Rectangle24" Fill="#FFF4F4F5" Height="90" Stroke="Black" VerticalAlignment="Top" Width="90" HorizontalAlignment="Right"                           Canvas.ZIndex="2" Canvas.Left="298" Canvas.Top="278" StrokeThickness="0"/>
                <Rectangle x:ConnectionId='9' x:Name="Rectangle31" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="90" Stroke="Black" VerticalAlignment="Bottom" Width="90"                           Canvas.Left="12" Canvas.Top="385" Canvas.ZIndex="2" StrokeThickness="0"/>
                <Rectangle x:ConnectionId='10' x:Name="Rectangle32" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="90" Stroke="Black" VerticalAlignment="Bottom" Width="90"                           Canvas.Left="103" Canvas.Top="385" Canvas.ZIndex="2" StrokeThickness="0"/>
                <Rectangle x:ConnectionId='11' x:Name="Rectangle34" Fill="#FFF4F4F5" Height="90" Stroke="Black" VerticalAlignment="Bottom" Width="90" HorizontalAlignment="Right"                           Canvas.Left="298" Canvas.Top="385" Canvas.ZIndex="2" StrokeThickness="0"/>
