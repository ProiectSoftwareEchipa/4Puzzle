                <TextBox x:ConnectionId='17' x:Name="PopupTextBoxUsername" Canvas.Left="59" Margin="0" TextWrapping="Wrap" Text="Register Name" Canvas.Top="304" Width="275" Canvas.ZIndex="4"                                         />
                <TextBlock x:Name="PopupTextBlockVictory" Canvas.Left="155" TextWrapping="Wrap" Text="Victory!" Canvas.Top="211" Canvas.ZIndex="4" FontSize="26.667"/>
                <TextBlock x:Name="PopupTextBlockMessage" Canvas.Left="103" TextWrapping="Wrap" Text="New highscore!" Canvas.Top="253" Canvas.ZIndex="4" FontSize="26.667"/>
