        <Button x:ConnectionId='2' x:Name="SinglePlayerMedium" Content="Medium" HorizontalAlignment="Left" Margin="93,266,0,0" VerticalAlignment="Top" Width="236" Height="103" FontSize="29.333"                                 />
        <Button x:ConnectionId='3' x:Name="SinglePlayerHard" Content="Hard" HorizontalAlignment="Left" Margin="93,369,0,0" VerticalAlignment="Top" Width="236" Height="103" FontSize="29.333"                               />
    </Grid>
</Page>

