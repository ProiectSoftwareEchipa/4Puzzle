<Page
    x:Class="_4Puzzle.Rankings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_4Puzzle"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.png"/>
        </Grid.Background>
        <Viewbox Stretch="Fill">
            <Canvas Width="400" Height="640">
                <ListView x:Name="listViewNumbers" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="32" Canvas.Left="53" Canvas.Top="229" FontSize="32" Canvas.ZIndex="2" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism" Foreground="#FF996A33">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontFamily" Value="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <ListView x:Name="listViewPlayerNames" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="192" Canvas.Left="95" Canvas.Top="229" FontSize="32" Canvas.ZIndex="2" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism" Foreground="#FF996A33">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontFamily" Value="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <ListView x:Name="listViewPlayerScores" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="77" Canvas.Left="287" Canvas.Top="229" FontSize="24" Canvas.ZIndex="2" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism" Foreground="#FF996A33">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontFamily" Value="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <Button x:ConnectionId='1' x:Name="buttonSinglePlayerEasy" Content="" Canvas.Left="10" Canvas.Top="96"                                      Width="124" Height="57">
                    <Button.BorderBrush>
                        <ImageBrush Stretch="Fill"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="Images/button_Easy_Smaller.png"/>
                    </Button.Background>
                </Button>
                <Button x:ConnectionId='2' x:Name="buttonbuttonSinglePlayerMedium" Content="" Canvas.Left="139" Canvas.Top="96"                                              Width="127">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Images/button_Medium_Smaller.png"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <ImageBrush Stretch="Fill"/>
                    </Button.BorderBrush>
                </Button>
                <Button x:ConnectionId='3' x:Name="buttonSinglePlayerHard" Content="" Canvas.Left="266" Canvas.Top="96"                                      Width="124">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Images/button_Hard_Smaller.png"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <ImageBrush Stretch="Fill"/>
                    </Button.BorderBrush>
                </Button>
                <Image x:Name="imageTitle" Height="186" Canvas.Left="95" Canvas.Top="-43" Width="226" Source="ms-appx:///Images/rankings_banner.png"/>
                <TextBlock x:Name="textBlockRankings" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="175" Height="53" Width="380" FontSize="37.333" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism" Text="Top 10 Easy" Canvas.ZIndex="2" Foreground="#FF996A33"/>
                <Image x:Name="imageBackground" Height="500" Canvas.Top="143" Width="380" Source="ms-appx:///Images/top_board_bg.png" Canvas.Left="10"/>
                <Image x:Name="imageRow1" Height="39" Canvas.Top="223" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow2" Height="39" Canvas.Top="262" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow3" Height="39" Canvas.Top="301" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow4" Height="39" Canvas.Top="340" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow5" Height="39" Canvas.Top="379" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow6" Height="39" Canvas.Top="418" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow7" Height="39" Canvas.Top="457" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow8" Height="39" Canvas.Top="496" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow9" Height="39" Canvas.Top="535" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:Name="imageRow10" Height="39" Canvas.Top="574" Width="380" Source="Images/top_entry.png" Canvas.Left="10"/>
                <Image x:ConnectionId='4' x:Name="imageSound" Height="50" Canvas.Left="340" Width="50" Canvas.Top="10" Source="ms-appx:///Images/soundon-icon.png"                            />
                <MediaElement x:Name="buttonSound" Source="ms-appx:///Sounds/button_sound.wav" AutoPlay="False" Height="0" Width="0"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>

