<Page
    x:Class="_4Puzzle.Rankings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_4Puzzle"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Images/background.png"/>
        </Grid.Background>
        <Viewbox Stretch="Fill">
            <Canvas Width="400" Height="640">
                <ListView x:Name="listViewNumbers" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="32" Canvas.Left="85" Canvas.Top="229" FontSize="32" Canvas.ZIndex="1" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontFamily" Value="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <ListView x:Name="listViewPlayerNames" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="136" Canvas.Left="121" Canvas.Top="229" FontSize="32" Canvas.ZIndex="1" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontFamily" Value="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <ListView x:Name="listViewPlayerScores" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="88" Canvas.Left="257" Canvas.Top="229" FontSize="24" Canvas.ZIndex="1" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontFamily" Value="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <Button x:ConnectionId='1' x:Name="buttonSinglePlayerEasy" Content="" Canvas.Left="10" Canvas.Top="96"                                      Width="124" Height="57">
                    <Button.BorderBrush>
                        <ImageBrush Stretch="Fill"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="Images/button_Easy_Smaller.png"/>
                    </Button.Background>
                </Button>
                <Button x:ConnectionId='2' x:Name="buttonbuttonSinglePlayerMedium" Content="" Canvas.Left="139" Canvas.Top="96"                                              Width="127">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Images/button_Medium_Smaller.png"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <ImageBrush Stretch="Fill"/>
                    </Button.BorderBrush>
                </Button>
                <Button x:ConnectionId='3' x:Name="buttonSinglePlayerHard" Content="" Canvas.Left="266" Canvas.Top="96"                                      Width="124">
                    <Button.Background>
                        <ImageBrush Stretch="Fill" ImageSource="Images/button_Hard_Smaller.png"/>
                    </Button.Background>
                    <Button.BorderBrush>
                        <ImageBrush Stretch="Fill"/>
                    </Button.BorderBrush>
                </Button>
                <Image x:Name="imageTitle" Height="186" Canvas.Left="95" Canvas.Top="-43" Width="226" Source="ms-appx:///Images/rankings_banner.png"/>
                <TextBlock x:Name="textBlockRankings" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="176" Height="53" Width="380" FontSize="37.333" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Fonts/RO-D3-Streetism.ttf#RO D3 Streetism" Text="Top 10 Easy" Canvas.ZIndex="1"/>
                <Image x:Name="image" Height="481" Canvas.Top="149" Width="350" Source="ms-appx:///Images/Chalckboard rankings.png" Canvas.Left="25"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Page>

